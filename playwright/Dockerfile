# Generated by https://smithery.ai. See: https://smithery.ai/docs/config#dockerfile
# Use a Node.js image as the base for building
FROM node:20 AS builder

# Set the working directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY package.json ./

# Copy the rest of the application code FIRST
COPY . .

# Install dependencies (this will also run the 'prepare' script which runs 'npm run build')
RUN npm install

# Download Playwright browsers (and their OS dependencies)
RUN npx playwright install --with-deps firefox

# Build step removed as 'npm install' runs the build via 'prepare' script
# RUN npm run build

# Use a smaller Node.js image for the final output
FROM node:20-slim AS release

# Install necessary OS dependencies for Playwright/Firefox
RUN apt-get update && apt-get install -y --no-install-recommends \
    libgtk-3-0 \
    libgbm-dev \
    libasound2 \
    libnss3 \
    libxss1 \
    libxtst6 \
    libx11-xcb1 \
    libdbus-glib-1-2 \
    # Clean up APT cache
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Set the working directory
WORKDIR /app

# Copy the built application from the builder stage
COPY --from=builder /app/dist /app/dist

# Copy package files
COPY --from=builder /app/package.json /app/package-lock.json ./

# Copy node_modules separately
COPY --from=builder /app/node_modules /app/node_modules

# Copy playwright browser cache
COPY --from=builder /root/.cache /root/.cache

# Define the entry point for the Docker container
ENTRYPOINT ["node", "dist/index.js"]
